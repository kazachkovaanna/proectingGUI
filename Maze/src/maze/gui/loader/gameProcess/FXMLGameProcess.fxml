<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="600.0" minWidth="1024.0" stylesheets="@gameProcess.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="maze.gui.controllers.FXMLGameProcessController">
   <children>
      <Pane fx:id="pane">
         <children>
            <Canvas fx:id="canvas" height="600.0" layoutY="-14.0" width="1024.0" />
            <VBox id="pauseBox" fx:id="pauseBox" alignment="CENTER" layoutX="412.0" layoutY="164.0" prefHeight="200.0" prefWidth="200.0" styleClass="pauseBox" stylesheets="@gameProcess.css">
               <children>
                  <Label id="label" minHeight="-Infinity" minWidth="-Infinity" text="Пауза">
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </Label>
                  <Button fx:id="play" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleContinueButtonAction" text="Продолжить">
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="back" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleBackButtonAction" text="Назад">
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="hint" mnemonicParsing="false" onAction="#getHint" text="Подсказка">
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
         </children>
      </Pane>
   </children>
</AnchorPane>
